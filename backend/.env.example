# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/stock_platform
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Stock Platform
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRE_SECONDS=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# VNStock Configuration
VNSTOCK_USERNAME=your-username
VNSTOCK_PASSWORD=your-password

# Security
SECURITY_PASSWORD_SALT=your-password-salt
SECURITY_BCRYPT_ROUNDS=12

# Development
DEBUG=True
TESTING=False